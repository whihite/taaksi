<Window x:Class="taaksi.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:taaksi"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="carsDataGrid" AutoGenerateColumns="False" Margin="10" VerticalScrollBarVisibility="Auto" SelectionChanged="carsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="100" />
                <DataGridTextColumn Header="Make" Binding="{Binding Make}" Width="100" />
                <DataGridTextColumn Header="Plate Number" Binding="{Binding PlateNumber}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
